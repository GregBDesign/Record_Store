<% layout('layouts/boilerplate') %>
<h2>Login</h2>
<form action="/users/login" method="POST" class="valid-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input type="text" id="username" class="form-control" name="username" value="testuser" required>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input type="password" id="password" class="form-control" name="password" value="test1234" required>
    </div>
    <div class="mb-3">
        <button class="btn btn-success">Submit</button>
    </div>
</form>