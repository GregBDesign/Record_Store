<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Recordstore</h1>
        <div class="col-6 offset-3">
            <form action="/recordstores" method="POST" class="valid-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="recordstore[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="recordstore[location]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="recordstore[image]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="recordstore[description]" required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add record store</button>
                </div>
                <a href="/recordstores">All recordstores</a>
            </form>
        </div>
    </div>
    